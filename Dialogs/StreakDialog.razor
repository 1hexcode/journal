@using MudBlazor

<MudDialog MaxWidth="MaxWidth.Small" CloseOnEscapeKey="true">
    <DialogContent>
        <MudStack AlignItems="AlignItems.Center" Spacing="3" Class="pa-4">
            
            <!-- Badge Icon -->
            <MudIcon Icon="@Icons.Material.Filled.Whatshot" 
                     Size="Size.Large" 
                     Color="Color.Warning" 
                     Style="font-size: 72px;" />

            <!-- Title -->
            <MudText Typo="Typo.h5" Align="Align.Center">
                ðŸŽ‰ @AchievementName
            </MudText>

            <!-- Message -->
            <MudText Typo="Typo.body1" Color="Color.Secondary" Align="Align.Center">
                @AchievementDescription
            </MudText>

            <!-- Streak indicator -->
            <MudPaper Elevation="2" Class="pa-4" Style="border-radius: 16px; min-width: 200px;">
                <MudStack AlignItems="AlignItems.Center" Spacing="1">
                    <MudIcon Icon="@Icons.Material.Filled.Whatshot" Color="Color.Error" />
                    <MudText Typo="Typo.h4" Color="Color.Primary">@CurrentStreak</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Day Streak</MudText>
                </MudStack>
            </MudPaper>

            <!-- Stats row -->
            <MudStack Row Spacing="4" Justify="Justify.Center">
                <MudStack AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h6">@TotalEntries</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Total Entries</MudText>
                </MudStack>
                <MudDivider Vertical FlexItem />
                <MudStack AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h6">@LongestStreak</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Best Streak</MudText>
                </MudStack>
            </MudStack>

            <!-- Continue Button -->
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Success" 
                       Size="Size.Large" 
                       FullWidth
                       OnClick="Close">
                Keep Going! ðŸ’ª
            </MudButton>
            
        </MudStack>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    
    [Parameter] public int CurrentStreak { get; set; }
    [Parameter] public int TotalEntries { get; set; }
    [Parameter] public int LongestStreak { get; set; }
    [Parameter] public string AchievementName { get; set; } = "New Badge!";
    [Parameter] public string AchievementDescription { get; set; } = "You unlocked a new achievement!";
    [Parameter] public string AchievementIcon { get; set; } = Icons.Material.Filled.Whatshot;

    private void Close() => MudDialog.Close();
}